<h1>Cocktail show</h1>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Cocktail Club</a>
</nav>

<div class="container">

  <h1><%= @cocktail.name %></h1>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
        <%#= render "doses/new", cocktail: @cocktail, dose: @dose %>
        <%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>

        <br>
      <%= link_to 'Back to all cocktails', cocktails_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>



